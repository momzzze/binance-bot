{
    "name": "binance-bot-monorepo",
    "version": "0.1.0",
    "private": true,
    "description": "Trading bot with real-time dashboard",
    "scripts": {
        "server:dev": "cd server && pnpm dev",
        "server:build": "cd server && pnpm build",
        "server:start": "cd server && pnpm start",
        "client:dev": "cd client && pnpm dev",
        "client:build": "cd client && pnpm build",
        "client:preview": "cd client && pnpm preview",
        "dev": "concurrently \"pnpm server:dev\" \"pnpm client:dev\"",
        "build": "pnpm server:build && pnpm client:build",
        "lint": "pnpm server:lint && pnpm client:lint",
        "format": "pnpm server:format && pnpm client:format"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "concurrently": "^8.2.2"
    },
    "dependencies": {
        "cors": "^2.8.5"
    }
}